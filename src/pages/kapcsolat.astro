import Layout from '../layouts/Layout.astro';
---

<style>
    .socialmedia {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1rem;  
    }
    input,
    textarea {
    border: 2px solid #000;
    border-radius: 4px;
    padding: 8px;
}

input::placeholder,
textarea::placeholder {
  color: #000;
  opacity: 0.5;
}
</style>


