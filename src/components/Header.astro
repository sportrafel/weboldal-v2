---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Kezdőlap', href: '/' },
    { linkText: 'Rólunk', href: '/rolunk'},
    { linkText: 'Kori', href: '/kori'},
    { linkText: 'Hoki', href: '/hoki'},
    { linkText: 'Edzések', href: '/edzesek' },
    { linkText: 'Galéria', href: '/galeria', opacity:0.5},
    { linkText: 'Kapcsolat', href: '/kapcsolat' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2" style={`opacity: ${item.opacity ?? 1};`}>
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
